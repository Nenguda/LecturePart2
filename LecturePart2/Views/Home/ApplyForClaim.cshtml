

@{
    ViewData["Title"] = "ApplyForClaim";
}

@model LecturePart2.Models.Claim

<h2>Apply for Claim</h2>

<form asp-action="ApplyForClaim" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="LecturerId" value="@ViewBag.LecturerId" />

    <div class="form-group">
        <label asp-for="ModuleName"></label>
        <input asp-for="ModuleName" class="form-control" />
        <span asp-validation-for="ModuleName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ModuleCode"></label>
        <input asp-for="ModuleCode" class="form-control" />
        <span asp-validation-for="ModuleCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SupportingDocuments">Upload Supporting Documents</label>
        <input asp-for="SupportingDocuments" type="file" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Submit Claim</button>
</form>
